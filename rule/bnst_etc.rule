;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

( ( ?* ) ( < ( ?* ) ((係:同格未格)
		     (係:文末)
		     (係:無格従属)
		     (係:デ格)
		     (係:ト格)
		     (係:マデ格)
		     (係:ニ格)
		     (係:未格)
		     (係:ガ格)
		     (係:ヲ格)
